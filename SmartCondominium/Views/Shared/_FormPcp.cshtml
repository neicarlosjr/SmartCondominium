@model Espelhos_Thor.Models.Pedido
<div class="form-group">
    <table class="table-form">
        <tr>
            <td align="center">@Html.LabelFor(p => p.NumeroThor, "Numero Thor")</td>
            <td>@Html.TextBoxFor(p => p.NumeroThor, new { @class = "form-control", size = "10", @required = "required", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.TipoAcab, "Tipo de Acabamento")</td>
            <td>@Html.TextBoxFor(p => p.TipoAcab, new { @class = "form-control", size = "02", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.DataPedido, "Data do Pedido")</td>
            <td><input type="date" name="DataPedido" class="form-control" value="@ViewBag.dtped" readonly="readonly" /></td>
        </tr>
        <tr>
            <td align="center">@Html.LabelFor(p => p.Cliente)</td>
            <td>@Html.TextBoxFor(p => p.Cliente, new { @class = "form-control", maxlenght = "35", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.Vendedor, "Vendedor")</td>
            <td>@Html.TextBoxFor(p => p.Vendedor, new { @class = "form-control", size = "20", @required = "required", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.PO, "PO")</td>
            <td>@Html.TextBoxFor(p => p.PO, new { @class = "form-control", @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td align="center">@Html.LabelFor(p => p.Material, "Material")</td>
            <td>@Html.TextBoxFor(p => p.Material, new { @class = "form-control", maxlenght = "35", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.Espessura, "Espessura")</td>
            <td>@Html.TextBoxFor(p => p.Espessura, new { @class = "form-control", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.Classificacao, "Classificação")</td>
            <td>@Html.TextBoxFor(p => p.Classificacao, new { @class = "form-control", maxlenght = "12", @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td align="center">@Html.LabelFor(p => p.Quantidade, "Quantidade")</td>
            <td>@Html.TextBoxFor(p => p.Quantidade, new { @class = "form-control", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.Preco, "Preço")</td>
            <td>@Html.TextBoxFor(p => p.Preco, new { @class = "form-control", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.OrdemPrioridade, "Prioridade")</td>
            <td>@Html.TextBoxFor(p => p.OrdemPrioridade, new { @class = "form-control", size = "4", @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td align="center">@Html.LabelFor(p => p.Destino, "Destino")</td>
            <td>@Html.TextBoxFor(p => p.Destino, new { @class = "form-control", maxlenght = "20", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.NumCtnEngs, "Num CTN")</td>
            <td>@Html.TextBoxFor(p => p.NumCtnEngs, new { @class = "form-control", size = "20", @readonly = "readonly" })</td>
            <td align="center">@Html.LabelFor(p => p.DataOvacao, "Data de Ovaçao")</td>
            <td><input type="date" name="DataEmbarque" class="form-control " value="@ViewBag.dtemb" readonly="readonly" /></td>
        </tr>
        <tr>
            <td align="center">@Html.LabelFor(p => p.DtEnvCtnAprovacao, "D. Envio p/ Aprov")</td>
            <td><input type="date" name="DataEmbarque" class="form-control" value="@ViewBag.ctnaprov" readonly="readonly" /></td>
            <td align="center">@Html.LabelFor(p => p.Serraria, "Serraria")</td>
            <td>@Html.DropDownListFor(p => p.Serraria, new SelectList(ViewBag.empresa, "Nome", "Nome"), new { @class = "form-control", @id = "Serraria", @nome = "Serraria" })</td>
            <td align="center">@Html.LabelFor(p => p.Saldo, "Saldo a Entregar", new { @class = "alert-warning" })</td>
            <td>@Html.TextBoxFor(p => p.Saldo, new { @class = "form-control", @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td><label>Status Atual</label></td>
            <td><input type="text"  value="@ViewBag.StatusAtual" class="form-control" readonly="readonly" /></td>
            <td><label>Novo Status</label></td>
            <td>
                <select name="Status" id="Status" class="form-control">
                    <option value="=@ViewBag.pedido.Status.Substring(0,1)" selected="selected">Novo Status</option>
                    @{
                        foreach (var s in ViewBag.Status)
                        {
                            <option value="@s.Codigo">@s.Descricao</option>
                        }

                    }
                </select>

          
            <td name="LbQtdAtd", style="display:none"><label  ,>Quantidade Atendida</label></td>
            <td name="QtdAtd", style="display:none"><input   type="number" class="form-control"   /></td>
        </tr>
        <tr>
            <td align="center">@Html.LabelFor(p => p.ObsMaterial, "Obs do Material")</td>
            <td>@Html.TextAreaFor(p => p.ObsMaterial, new { @class = "form-control", cols = "50", rows = "5"  })</td>
        </tr>
    </table>
</div>