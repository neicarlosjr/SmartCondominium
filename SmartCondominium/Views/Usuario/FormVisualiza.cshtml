@model Espelhos_Thor.Models.Usuario
<div class="panel panel-primary">
    <div class="panel-heading"><h4>Cadastro de Usuário</h4></div>
    <div class="panel-body">
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        <div class="img-thumbnail">
                            @{
                                if (ViewBag.usuario.CaminhoFoto == null)
                                {
                                    <img src="~/Content/img/perfil.jpg" height="200" width="200" class="img-rounded profile_img">
                                }
                                else
                                {
                                    <img src="~/Uploads/Usuarios/@ViewBag.usuario.CaminhoFoto" height="200" width="200" class="img-rounded profile_img">
                                }
                            }

                        </div>
                    </td>
                    <td>
                        <table class="table-form">

                            <tr>

                                <td>
                                    @Html.LabelFor(u => u.Nome, "Nome:")
                                </td>
                                <td>
                                    @Html.TextBoxFor(u => u.Nome, new { @class = "form-control", size = "50", @readonly = "readonly" })
                                </td>
                                <td>
                                    @Html.LabelFor(u => u.Login, "Login:")
                                </td>
                                <td>
                                    @Html.TextBoxFor(u => u.Login, new { @class = "form-control", @readonly = "readonly" })
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(u => u.Email, "Email:")
                                </td>
                                <td>
                                    @Html.TextBoxFor(u => u.Email, new { @class = "form-control", size = "50", @readonly = "readonly" })
                                </td>
                                <td>@Html.HiddenFor(u => u.Password, "Senha:")</td>
                                <td>@Html.HiddenFor(u => u.Password, new { @class = "form-control", @readonly = "readonly" })</td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(u => u.Adm, "Admin")
                                    @Html.CheckBoxFor(u => u.Adm, new { @readonly = "readonly" })
                                </td>
                                <td>
                                    @Html.LabelFor(u => u.Edita, "Edita")
                                    @Html.CheckBoxFor(u => u.Edita, new { @readonly = "readonly" })
                                </td>
                                
                                <td>
                                @Html.LabelFor(u => u.Pcp, "PCP")
                                @Html.CheckBoxFor(u => u.Pcp, new { @readonly = "readonly" })
                               </td>
                </tr>


                        </table>
                    </td>
                </tr>

            </table>
        </div>
    </div>
    <div class="panel-footer info">
        @Html.ActionLink("Sair", "Index", "Usuario", new { @class = "btn btn-danger" })
    </div>
</div>
